<div class="container pt-3">
  <div class="row">
    <h1>検索</h1>
    <div class="row mb-5">
      <%= render 'search_form', q: @q, url: articles_path %>
    </div>
    <div class="row">
      <% if @articles.present? %>
        <div class="d-flex justify-content-between align-items-center">
          <h1>記事一覧</h1>
          <%= paginate @articles %>
        </div>
        <%= render @articles %>
        <div class="d-flex justify-content-end">
          <%= paginate @articles %>
        </div>
      <% else %>
        <div class="mb-3">掲示板がありません</div>
      <% end %>
    </div>
  </div>
</div>