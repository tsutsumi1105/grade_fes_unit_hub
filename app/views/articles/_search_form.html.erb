<%= search_form_for @q, url: articles_path do |f| %>
  <div class="input-group mb-3">
    <%= f.search_field :title_cont, placeholder: "タイトル", class: 'form-control' %>
    <%= f.search_field :user_name_cont, placeholder: "ユーザー名", class: 'form-control' %>
    <%= f.search_field :tags_name_cont, placeholder: "タグ", class: 'form-control' %>
    <div class="input-group-append">
      <%= f.submit "検索", class: 'btn btn-primary' %>
    </div>
  </div>
<% end %>