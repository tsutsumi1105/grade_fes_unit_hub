<div class="container">
  <div class="row">
    <div class="col-lg-8 offset-lg-2">
      <h1><%= "投稿作成" %></h1>
      <%= form_with model: @article, class: "new_article" do |f| %>
        <div class="mb-3">
          <%= f.label "タイトル" %>
          <%= f.text_field :title, class: "form-control" %>
        </div>
        <div class="mb-3">
          <%= f.label "本文" %>
          <%= f.text_area :body, class: "form-control", rows: "10" %>
        </div>
        <%= f.submit nil, class: "btn btn-primary" %>
      <% end %>
    </div>
  </div>
</div>