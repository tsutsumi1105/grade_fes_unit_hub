<div class="container pt-5">
  <div class="row mb-3">
    <div class="col-lg-8 offset-lg-2">
      <h1><%= "投稿詳細" %></h1>
      <article class="card">
        <div class="card-body">
          <div class="row">
            <div class="col-md-9">
              <h3 style="display: inline;"><%= @article.title %></h3>
              <ul class="list-inline">
                <li class="list-inline-item"><%= "by #{@article.user.name}" %></li>
                <li class="list-inline-item"><%= l @article.created_at, format: :long %></li>
              </ul>
              <% if current_user.own?(@article) %>
                <div class='d-flex justify-content-end'>
                  <%= link_to edit_article_path(@article), id: "button-edit-#{@article.id}" do %>
                    <i class='bi bi-pencil-fill'></i>
                  <% end %>
                  <%= link_to article_path(@article), id: "button-delete-#{@article.id}", class: "ms-2" do %>
                    <i class="bi bi-trash-fill"></i>
                  <% end %>
                </div>
              <% end %>
            </div>
          </div>
          <p><%= simple_format(@article.body) %></p>
        </div>
      </article>
    </div>
  </div>
</div>