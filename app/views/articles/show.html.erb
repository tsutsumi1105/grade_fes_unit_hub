<div class="container pt-5">
  <div class="row mb-3">
    <div class="col-lg-8 offset-lg-2">
      <h1><%= "投稿詳細" %></h1>
      <article class="card">
        <div class="card-body">
          <div class="row">
            <div class="col-md-9">
              <h3 style="display: inline;"><%= @article.title %></h3>
              <p><%= simple_format(@article.body) %></p>
              <ul class="list-inline">
                <li class="list-inline-item"><%= "by #{@article.user.name}" %></li>
                <li class="list-inline-item"><%= l @article.created_at, format: :long %></li>
              </ul>
              <% if current_user.own?(@article) %>
                <div class='d-flex justify-content-end'>
                  <%= link_to "編集", edit_article_path(@article), class: "btn btn-primary", id: "button-edit-#{@article.id}" %>
                  <%= link_to "削除", article_path(@article), data: { turbo_method: :delete, turbo_confirm: "本当に削除しますか？" }, class: "btn btn-danger" %>
                </div>
              <% end %>
            </div>
          </div>
          <%= link_to "戻る", articles_path %>
        </div>
      </article>
    </div>
  </div>
</div>