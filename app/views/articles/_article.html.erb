<div class="col-sm-12 col-lg-4 mb-3">
  <div id="article-id-<%= article.id %>">
    <div class="card">
      <div class="card-body">
        <div class="d-flex">
          <h4 class="card-title">
            <%= link_to article.title, article_path(article) %>
          </h4>
          <div class='ms-auto'>
            <%= link_to '#', id: 'button-edit-#{article.id}' do %>
              <i class="bi bi-pencil-fill"></i>
            <% end %>
            <%= link_to '#', id: 'button-delete-#{article.id}', method: :delete, data: {confirm: ''} do %>
              <i class="bi bi-trash-fill"></i>
            <% end %>
          </div>
        </div>
        <ul class="list-inline">
          <li><i class="bi bi-person"></i><%= article.user.name %></li>
          <li><i class="bi bi-calendar"></i><%= l article.created_at, format: :short %></li>
        </ul>
      </div>
    </div>
  </div>
</div>