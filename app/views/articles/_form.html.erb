<%= form_with model: article do |f| %>
  <div class="mb-3">
    <%= f.label :title, "タイトル" %>
    <%= f.text_field :title, class: "form-control" %>
  </div>

  <div class="mb-3">
    <%= f.label :thumbnail, "サムネイル画像" %>
    <%= f.file_field :thumbnail %>
  </div>

  <div class="mb-3">
    <%= f.label :body, "本文" %>
    <%= f.rich_text_area :body, class: "form-control", rows: "10" %>
  </div>

  <div class="mb-3">
    <%= f.label :tags, "タグ" %>
    <%= f.text_field :tags, class: "form-control", placeholder: @article.tags.map(&:name).join(", "), value: @tag_names %>
    <small class="form-text text-muted">複数のタグはカンマで区切って入力してください。</small>
  </div>

  <div class="d-flex justify-content-end">
    <%= f.submit "下書きに保存する", name: "draft", class: "btn btn-secondary me-2" %>
    <%= f.submit "投稿する", class: "btn btn-primary" %>
  </div>
<% end %>