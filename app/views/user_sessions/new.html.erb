<div class="container">
  <div class="row">
    <div class="col-md-10 col-lg-8 mx-auto">
      <h1>ログイン</h1>
      <%= form_with url: login_path do |f| %>
        <div class="mb-3">
          <%= f.label :メールアドレス %>
          <%= f.email_field :email, class: "form-control" %>
        </div>
        <div class="mb-3">
          <%= f.label :パスワード %>
          <%= f.password_field :password, class: "form-control" %>
        </div>
        <div class="d-flex justify-content-between">
          <div>
            <%= link_to "ユーザー登録", new_user_path, class: "btn btn-link" %>
            <%= link_to "パスワードをお忘れの方はこちら", new_password_reset_path, class: "btn btn-link ml-2" %>
          </div>
          <%= f.submit "ログイン", class: "btn btn-primary ml-auto" %>
        </div>
      <% end %>
    </div>
  </div>
</div>