<div class="container my-4">
  <div class="row mb-5">
    <div class="col-md-12">
    <h2>プロフィール</h2>
      <div class="card">
        <div class="card-body">
          <ul class="list-inline mt-auto">
            <li><i class="card-text"></i> 名前: <%= @user.name %></li>
            <li><i class="card-text"></i> メールアドレス: <%= @user.email %></li>
          </ul>
        </div>
        <%= link_to 'ユーザー情報を編集', edit_user_path(@user), class: 'btn btn-primary position-absolute bottom-0 end-0 mb-2 me-2' %>
      </div>
    </div>
  </div>

  <div class="row">
    <div class="col-md-12">
      <h2>投稿一覧</h2>
      <% if @articles.any? %>
        <div class="row">
          <% @articles.each do |article| %>
            <%= render 'articles/article', article: article %>
          <% end %>
        </div>
      <% else %>
        <p>投稿はありません。</p>
      <% end %>
    </div>
    <div class="d-flex justify-content-between">
      <%= link_to 'トップページへ', articles_path, class: 'btn btn-secondary' %>
    </div>
  </div>
</div>