<div class="container my-4">
  <div class="row mb-5">
    <div class="col-md-12">
      <h1 class="mb-5">マイページ</h1>
      <h3>プロフィール</h3>
      <div class="card">
        <div class="card-body">
          <ul class="list-inline mt-auto">
            <li><i class="card-text"></i> 名前: <%= @user.name %></li>
            <li><i class="card-text"></i> メールアドレス: <%= @user.email %></li>
          </ul>
        </div>
      </div>
      <div class="d-flex justify-content-between mt-3 mb-5">
        <%= link_to 'パスワードリセット申請', new_password_reset_path(email: @user.email), class: 'btn btn-link' %>
        <%= link_to 'ユーザー情報を編集', edit_user_path(@user), class: 'btn btn-primary' %>
      </div>
    </div>
  </div>

  <div class="row">
    <div class="col-md-12">
      <h3>投稿一覧</h3>
      <%= render 'user_articles', articles: @articles %>
    </div>
    <div class="d-flex justify-content-between">
      <%= link_to 'トップページへ', articles_path, class: 'btn btn-secondary' %>
    </div>
  </div>
</div>